<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:padding="@dimen/space_normal">

    <TextView
        android:id="@+id/itemMenuItemTitle"
        style="@style/DefaultTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_normal"
        app:layout_constraintBottom_toTopOf="@+id/itemMenuItemDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/itemMenuItemPrice"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pizza Margerita" />

    <TextView
        android:id="@+id/itemMenuItemDescription"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_normal"
        android:layout_marginTop="@dimen/space_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/itemMenuItemArrowImage"
        app:layout_constraintTop_toBottomOf="@id/itemMenuItemTitle"
        tools:text="tomato sauce, cheese" />

    <ImageView
        android:id="@+id/itemMenuItemArrowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:tint="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/itemMenuItemPrice"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_small"
        app:layout_constraintRight_toLeftOf="@id/itemMenuItemArrowImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5.60â‚¬" />

</android.support.constraint.ConstraintLayout>